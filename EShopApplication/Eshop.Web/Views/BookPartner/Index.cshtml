@model IEnumerable<EShop.Domain.Domain.Book>

@{
    ViewData["Title"] = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<body style="background-color:azure; font-family:Arial, sans-serif;">

    <h1 style="color:navy; text-align:center; font-size:36px;">Partner's BookStore</h1>

    <div class="container" style="margin-top:20px;">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <div class="card" style="margin-bottom:20px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
                        <div class="card-body" style="background-color:white; padding:20px;">
                            <h5 class="card-title" style="font-weight:bold; color:#1d09ab;">
                                @Html.DisplayFor(modelItem => item.BookName)
                            </h5>
                            <p class="card-text" style="color:#1d09ab;">
                                @Html.DisplayFor(modelItem => item.BookDescription)
                            </p>
                            <p class="card-text" style="font-size:18px; color:green;">
                                <strong>Price:</strong> @Html.DisplayFor(modelItem => item.Price)
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

</body>
